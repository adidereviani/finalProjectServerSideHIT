style.
  fieldset {
  background-color: #eeeeee;
  font-size:20px;
  width: 550px;
  margin:auto;
  }
  legend {
  background-color: gray;
  color: white;
  padding: 5px 10px;
  }
  input {
  margin: 5px;
  font-size:20px;
  }
  form {
  width: 50vw;
  margin-left : 25vw;
  }
form(role='form' method='POST' action='http://localhost:3000/api/addCost/done')
  fieldset
    legend  Add Cost
    label(for='product_id') Product ID:
    input#product_id(type='number' name='product_id' value='123456789')
    br
    br
    label(for='name') Product Name:
    input#name(type='text' name='name' value='Red Book')
    br
    br
    label(for='description') Description:
    input#description(type='text' name='description' value='this is red book that tall the story of the Red Moon')
    br
    br
    label(for='category') Category:
    input#category(type='text' name='category' value='Books')
    br
    br
    label(for='sum') The price :
    input#sum(type='number' name='sum' value='50')
    br
    br
    input(type='submit' value='Add Product')

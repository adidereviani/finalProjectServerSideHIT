style.
  fieldset {
  background-color: #eeeeee;
  font-size:20px;
  width: 550px;
  margin:auto;
  }
  legend {
  background-color: gray;
  color: white;
  padding: 5px 10px;
  }
  input {
  margin: 5px;
  font-size:20px;
  }
  form {
  width: 50vw;
  margin-left : 25vw;
  }
form(role='form' method='POST' action='http://localhost:3000/api/addUser/done')
  fieldset
    legend  Add User
    label(for='id') ID:
    input#id(type='number' name='id' value='123456789')
    br
    br
    label(for='first_name') First name:
    input#first_name(type='text' name='first_name' value='Joe')
    br
    br
    label(for='last_name') Last name:
    input#last_name(type='text' name='last_name' value='Boom')
    br
    br
    input(type='submit' value='Add User')

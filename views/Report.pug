style.
  fieldset {
  background-color: #eeeeee;
  font-size:20px;
  width: 550px;
  margin:auto;
  }
  legend {
  background-color: gray;
  color: white;
  padding: 5px 10px;
  }
  input {
  margin: 5px;
  font-size:20px;
  }
  form {
  width: 50vw;
  margin-left : 25vw;
  }
form(role='form' method='POST' action='http://localhost:3000/api/report/done')
  fieldset
    legend  Get Report For User
    label(for='customer_id') USER ID:
    input#customer_id(type='number' name='customer_id' value='123456789')
    br
    br
    label(for='month') Month:
    input#month(type='number' name='month' value='01')
    br
    br
    label(for='year') Year:
    input#year(type='number' name='year' value='2022')
    br
    br
    input(type='submit' value='Get Report')

        input#product_name(type='text', name='product_name', value='book')
        br
        br
        label(for='product_id') Product ID:
        input#product_id(type='number', name='product_id', value='12')
        br
        br
        label(for='quantity') Quantity:
        input#quantity(type='number', name='quantity', value='1')
        br
        br
        input(type='submit', value='Send Order')

